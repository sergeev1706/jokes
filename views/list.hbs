<div class="flex">
  {{!-- список категорий --}}
  <div class="nav">
    <ul>
      {{#each topics}}
      <li>
        <a href="/list/{{.}}">{{.}}</a><br><br>
      </li>
      {{/each}}
    </ul>
  </div>

  {{!-- список анекдотов --}}
  <div class="body">
    <ul>
      {{#each jokes}}
      <li class="item">
        <p>{{format_topic.}}</p>
        <h3>{{format_text.}}</h3>
      </li>
      {{/each}}
    </ul>
  </div>
</div>

{{!-- пагинация --}}
<ul class="pagination-list">
  {{#each pages}}
  <li class="pagination">{{.}}</li>
  {{/each}}
</ul>